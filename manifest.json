{
    "name" : "TabManager",
    "description" : "Open Source version of OneTab",
    
    "author" : "Abhishek Srivastava - nit.abhi85@gmail.com",
    
    "manifest_version"  : 2,
    "version" : "0.1",
    
    "browser_action" : {
        "default_popup" : "popup.html",
        "default_title" : "TabM"
    },
    
    "background" : {
        "persistent" : false,
        "page" : "tabm.html"
    },
    
    "options_page" : "options.html",
    "options_ui" : {
        "chrome_style" : true,
        "page" : "options.html"
    },
    
    "permissions" : [
        "tabs",
        "activeTab",
        "storage",
        "unlimitedStorage",
        "contextMenus"
    ],
    
    "icons": { 
        "16": "assets/icon/icon-48.png",
        "48": "assets/icon/icon-48.png",
        "128": "assets/icon/icon-48.png"
    }
}