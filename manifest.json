{
    'name' : 'TabManager',
    'description' : 'Open Source version of OneTab',
    'default_locale' : 'en',
    
    'author' : 'Abhishek Srivastava - nit.abhi85@gmail.com',
    
    'manifest_version'  : 2,
    'version' : '0.1',
    
    'browser_action' : {
        'default_popup' : 'popup.html',
        'default_title' : 'TabM'
